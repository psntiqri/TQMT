@model Exilesoft.MyTime.ViewModels.EmployeeCheckListViewModel
@{
    ViewBag.Title = "Index";
    int count = 1;
}
<script src="../../Scripts/jquery.idTabs.min.js"></script>
<style>
    /*  idTabs ~ Sean Catchpole  */


    /* Style for Usual tabs */
    .usual {
        background: #FFF;
        color: #111;
        padding: 5px !important;
        border: 1px solid #d7d7d7;
    }

        .usual li {
            list-style: none;
            float: left;
        }

        .usual ul {
            padding: 0px !important;
            padding-left: 0px !important;
            margin: 0px !important;
        }

            .usual ul a {
                display: block;
                padding: 2px 10px;
                text-decoration: none!important;
                margin: 1px;
                margin-left: 0;
                color: #000;
                background: #eaeaea;
                border: 1px solid #d7d7d7;
                border-bottom: 0px;
            }

                .usual ul a:hover {
                    color: #FFF;
                    background: #8a8a8a;
                }

                .usual ul a.selected {
                    margin-bottom: 0;
                    color: #FFF;
                    background: #72B45D !important;
                    border-bottom: 1px solid snow;
                    cursor: default;
                    border-bottom: 0px;
                }

        .usual div {
            padding: 10px 10px 10px 10px;
            clear: left;
            background: snow;
            border: 1px solid #d7d7d7;
        }

            .usual div a {
                color: #000;
                font-weight: bold;
            }

            .usual td a {
                color: #000;
                font-weight: normal;
                white-space:nowrap;
            }
</style>

<table class="clearTable">
    <tr>
        <td>
            <h2>ProAccount Employee List</h2>
        </td>
        <td style="text-align: right; padding-top: 15px;">
           <p>
    @Html.ActionLink("Create New Check List Item", "Create")
</p>
        </td>
    </tr>
</table>



<div id="Report_Dateselection_Tab" class="usual">
    <ul>
        <li><a href="#tabs1" class="selected">Onboard Checklist</a></li>
        <li><a href="#tabs2">Exit Checklist</a></li>
    </ul>
    <div id="tabs1">
        <table id="tb1" style="width: 100%;">
    <tr>
        <th style="width: 50px;"></th>
        <th style="width: 60%">Description
        </th>
        <th style="width: 250px;">Group
        </th>
        <th style="width: 100px;">Onboard / Exit
        </th>


    </tr>

    @foreach (var item in Model.OnboardCheckList)
    {
   
        <tr>
            <td style="text-decoration:none !important; white-space:nowrap; font-weight:normal !important;">
                @Html.ActionLink("Edit Item", "Edit", new { id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Group)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InOutMode)
            </td>
        </tr>
   
        count++;

    }

</table>
    </div>
    <div id="tabs2">
        <table id="tb1" style="width: 100%;">
    <tr>
        <th style="width: 50px;"></th>
        <th style="width: 60%">Description
        </th>
        <th style="width: 250px;">Group
        </th>
        <th style="width: 100px;">Onboard / Exit
        </th>


    </tr>

    @foreach (var item in Model.exitCheckList)
    {
   
        <tr>
            <td>
                @Html.ActionLink("Edit Item", "Edit", new { id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Group)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InOutMode)
            </td>
        </tr>
   
        count++;

    }

</table>
    </div>
</div>

<script type="text/javascript">
    $("#Report_Dateselection_Tab ul").idTabs("tabs2");
</script>


