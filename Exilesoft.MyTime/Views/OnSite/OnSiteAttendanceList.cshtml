<script src="~/Content/scripts/frms/onsite_frm.js"></script>
<div id="DIV_PageInnerContent">
    <table class="clearTable" id="TBL_PageMainTable">
        <tr>
            <td class="left_hedder_inner" style="padding-bottom: 15px;">My On Site Attendance History
            </td>
            <td style="text-align: right; width: 15px;"></td>
        </tr>
        <tr>
            <td colspan="2" style="padding-top: 10px;">
                <div id="DIV_LoadingReportWaitMessage">
                    <div style="text-align: center; font-size: 20px; color: #8a8a8a; border: 0px; padding-top: 50px; padding-bottom: 50px;">
                        <img src="../../Content/images/loder_wait.gif" /><br />
                        Loading On Site Attendance List. Please wait.
                    </div>
                </div>
                <div class="demo_jui" style="display: none; width: 1000px;" id="DIV_EmployeeOnSiteEntryListTable">
                    <table cellpadding="0" cellspacing="0" border="0" class="display" id="EmployeeOnSiteEntryListTable">
                        <thead>
                            <tr>
                                <th></th>
                                <th></th>
                                <th>Employee
                                </th>
                                <th>Date
                                </th>
                                <th>Time
                                </th>
                                <th>Status
                                </th>
                                <th>Location
                                </th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </td>
        </tr>
    </table>
</div>
 
<input type="hidden" value="@ViewBag.Role" id="UserPriviladge" />
<script>
    $('#EmployeeOnSiteEntryListTable').width($('#DIV_PageInnerContent').width());
    new OnSiteForm().UpdateEmployeeOnSiteAttendaceList();
    $(document).ready(function () {
        hide("Div_SystemLodingCntent");
        show("systemContentPage");
    });
</script>
