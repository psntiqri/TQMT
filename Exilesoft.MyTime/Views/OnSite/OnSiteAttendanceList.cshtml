    Layout = null;
}

<style>
    .DataTables_sort_wrapper {
        white-space: nowrap;
        text-wrap: avoid;
    }

    .odd td {
        white-space: nowrap;
        text-wrap: avoid;
    }

    .even td {
        white-space: nowrap;
        text-wrap: avoid;
    }

    .dataTables_filter {
        float: left;
        text-align: left;
        padding-left: 10px;
    }

    .demo_jui {
        border-width: 1px;
        border-style: solid;
        border-color: #e0e0e0;
        font-size: 12px;
    }

        .demo_jui input {
            width: 250px;
            margin-left: 15px;
        }

    .InnerGridButton {
        border-width: 1px;
        border-style: solid;
        border-color: #b1b1b1;
        margin: 3px;
        margin-left: 5px;
        padding: 4px;
        padding-left: 10px;
        padding-right: 10px;
        white-space: nowrap;
        text-wrap: avoid;
        color: #303030;
        width: 10px;
        display: inline;
        height: 20px;
        cursor: pointer;
        text-decoration: none;
    }

        .InnerGridButton:hover {
            background-color: #fbfbfb;
        }

    .gridIconColumn {
        
    }
