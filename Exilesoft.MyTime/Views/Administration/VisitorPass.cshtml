@{
    ViewBag.Title = "Assign Visitor Pass";
}
@{
    Layout = null;
}

<div id="DIV_PageInnerContent">
<table class="clearTable" id="TBL_PageMainTable">
    <tr>
            <td class="left_hedder_inner">Assign Visitor Pass
            </td>
        <td style="text-align: right; width: 15px;">
                
        </td>
    </tr>
    <tr>
        <td colspan="2" style="padding-top: 10px;">
           

            <fieldset>
                <legend>Personal Information</legend>
                <div style="padding-top: 15px;">
                <table class="dataEntryTable" style="display:inline;">

                    @using (Html.BeginForm())
                    {
                        <tr>
                            <td style="width: 140px">Employee</td>
                            <td style="width: 300px;">
                                @Html.DropDownList("EmployeeId", (SelectList)ViewBag.EmployeeList)
                            </td>
                        </tr>
                        <tr>
                            <td >Enrollment No</td>
                            <td >
                                @Html.Editor("CardNo")
                                <span id="errorMsg" class="error"></span>
                            </td>
                        </tr>   
                         <tr>
                            <td >Date</td>
                            <td >
                                @Html.TextBox("pickeddate", "", new { @class="TextBoxSmall" , style="width:100px;" })
                                <span id="errorMsg2" class="error"></span>
                            </td>
                        </tr>
    
                        <script language="javascript">
                            $('#pickeddate').datepicker({
                                showOtherMonths: true,
                                selectOtherMonths: true,
                                beforeShow: function (input) {
                                    $(input).css({
                                        "position": "relative",
                                        "z-index": 999999
                                    });
                                }
                            });
                            $('#ui-datepicker-div').css('display', 'none');
                        </script>
                    }
                </table>
                </div>
            </fieldset>
            
            <div>
                <p>
                    <input type="submit" value="Transfer" class ="ButtonForm" onclick="new AdministrationForm().SaveVisitorPassDetails();"/><div style="display: inline; color: green; font-weight: bold;">@ViewBag.TransferMessage</div>
                </p>
            </div>
        </td>
        
    </tr>
</table>
</div>
